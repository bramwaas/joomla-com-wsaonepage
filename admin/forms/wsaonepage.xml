<?xml version="1.0" encoding="utf-8"?>
<form  addruleprefix="WaasdorpSoekhan\Component\Wsaonepage\Administrator\Rule">
<!--  Form to update the component in Admin Component menu 
changed 4-10-2020 after an example of banner.xml
9-8-2021 J4 compared with contact.xml
11-9-2021
-->
	<fieldset 
	name="details"
	label="COM_WSAONEPAGE_DETAILS"
	>
		<field
				name="title"
				type="text"
				label="COM_WSAONEPAGE_TITLE_LABEL"
				hint="COM_WSAONEPAGE_TITLE_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field 
				name="alias" 
				type="text" 
				label="JFIELD_ALIAS_LABEL"
				description="JFIELD_ALIAS_DESC"
				hint="JFIELD_ALIAS_PLACEHOLDER"
				size="40" 
				/>
		<fieldset
			name="wsaonepagedetails"
			addfieldprefix="WaasdorpSoekhan\Component\Wsaonepage\Administrator\Field"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
			class="readonly"
				/>
		<field
				name="menutype"
				type="wsamenutype"
				label="COM_WSAONEPAGE_MENUTYPE_LABEL"
				hint="COM_WSAONEPAGE_MENUTYPE_DESC"
			filter="string"
			required="true"
				/>
		<field
				name="description"
				type="text"
				label="COM_WSAONEPAGE_DESCRIPTION_LABEL"
				hint="COM_WSAONEPAGE_DESCRIPTION_DESC"
				size="256"
				class="inputbox"
				default=""
				/>
		
	</fieldset>
			<field
				name="catid"
				type="category"
				label="JCATEGORY"
				extension="com_wsaonepage"
				required="false"
				class="inputbox"
				default="0"
				>
				 <option value="0">JOPTION_SELECT_CATEGORY</option>
				 <option value="1">1</option>
		</field>
		
		<!-- from article but there within fieldset TODO for later -->
		<!--  field 
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			extension="com_wsaonepage"
			addfieldprefix="Joomla\Component\Categories\Administrator\Field"
			required="true"
			default=""
			class="advancedSelect"
		/ -->
	
		<field
			name="published"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			size="1"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<!-- field
			name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			table="#__wsaonepage"
		/ -->

		<field
				name="language" 
				type="contentlanguage" 
				label="JFIELD_LANGUAGE_LABEL"
				description="COM_WSAONEPAGE_FIELD_LANGUAGE_DESC"
				>
				<option value="*">JALL</option>
		</field>
		<field
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			hint="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			maxlength="255"
			class="span12"
			size="45"
			labelclass="control-label"
		/>
		</fieldset>
	

	<fields name="params">
		<fieldset
				name="params"
				label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
				<field
					name="show_title"
					type="list"
					label="JGLOBAL_SHOW_TITLE_LABEL"
					useglobal="true"
					validate="options"
					>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field
					name="show_category"
					type="list"
					label="COM_WSAONEPAGE_FIELD_SHOW_CATEGORY_LABEL"
					hint="COM_WSAONEPAGE_FIELD_SHOW_CATEGORY_DESC"
					default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>

	<fieldset name="publish" label="COM_WSAONEPAGE_GROUP_LABEL_PUBLISHING_DETAILS">
		<field
			name="publish_up"
			type="calendar"
			label="COM_WSAONEPAGE_FIELD_PUBLISH_UP_LABEL"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>
		<field
			name="publish_down"
			type="calendar"
			label="COM_WSAONEPAGE_FIELD_PUBLISH_DOWN_LABEL"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>
		<field
			name="created"
			type="calendar"
			label="COM_WSAONEPAGE_FIELD_CREATED_LABEL"
			size="22"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>
		<field
			name="created_by"
			type="user"
			label="COM_WSAONEPAGE_FIELD_CREATED_BY_LABEL"
		/>
		<field
			name="created_by_alias"
			type="text"
			label="COM_WSAONEPAGE_FIELD_CREATED_BY_ALIAS_LABEL"
			size="20"
		/>
		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			size="22"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<field
			name="version"
			type="text"
			label="COM_WSAONEPAGE_FIELD_VERSION_LABEL"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
	<field
		name="checked_out"
		type="hidden"
		filter="unset"
	/>

	<field
		name="checked_out_time"
		type="hidden"
		filter="unset"
	/>
	</fieldset>
	<fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
			<field 
				name="robots"
				type="list"
				label="JFIELD_METADATA_ROBOTS_LABEL"
				validate="options"
				>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow" />
				<option value="noindex, follow" />
				<option value="index, nofollow" />
				<option value="noindex, nofollow" />
			</field>

			<field 
				name="author" 
				type="text"
				label="JAUTHOR"
				description="JFIELD_METADATA_AUTHOR_DESC"
				size="20" 
			/>

			<field 
				name="rights" 
				type="text" 
				label="JFIELD_META_RIGHTS_LABEL"
				size="20"
			/>

		<!-- TODO from article but probably not  applicable here
			<field 
				name="xreference" 
				type="text"
				label="COM_CONTENT_FIELD_XREFERENCE_LABEL"
				description="COM_CONTENT_FIELD_XREFERENCE_DESC"
				size="20" 
			/> -->

		<field
			name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="COM_WSAONEPAGE_FIELD_METAKEYWORDS_DESC"
			rows="3"
			cols="30"
		/>
		<field
			name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			rows="3"
			cols="30"
			maxlength="160"
			charcounter="true"
		/>

	</fieldset>
	</fields>
		<fieldset
			name="accesscontrol"
			label="COM_WSAONEPAGE_FIELDSET_RULES"
	>
    	<field
				name="asset_id"
				type="hidden"
				filter="unset"
				/>
    	<field
				name="rules"
				type="rules"
				label="COM_WSAONEPAGE_FIELD_RULES_LABEL"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_wsaonepage"
				section="message"
				/>
    </fieldset>
</form>